@page
@model Bloggie.Web.Pages.RegisterModel
@{
}

<div class="container mx-auto">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">

			<h1 class="mt-5 mb-3 h3">Register</h1>

			<partial name="_Notification">

				<form method="post">

					<div class="mb-3">
						<label class="form-label">Username</label>
						<input class="form-control" type="text" asp-for="RegisterViewModel.Username" />
						<span class="text-danger" asp-validation-for="RegisterViewModel.Username"></span>
					</div>

					<div class="mb-3">
						<label class="form-label">Email</label>
						<input class="form-control" type="email" asp-for="RegisterViewModel.Email" />
						<span class="text-danger" asp-validation-for="RegisterViewModel.Email"></span>
					</div>

					<div class="mb-3">
						<label class="form-label">Password</label>
						<input class="form-control" type="password" asp-for="RegisterViewModel.Password" />
						<span class="text-danger" asp-validation-for="RegisterViewModel.Password"></span>
					</div>

					<div class="mb-3">
						<button type="submit" class="btn bg-dark text-light">Register</button>
					</div>

				</form>
		</div>
	</div>
</div>